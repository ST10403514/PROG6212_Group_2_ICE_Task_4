@model IEnumerable<ICE4.Models.TaskModel>

<h1>Tasks</h1>

<a asp-action="Create" class="btn btn-primary">Create New Task</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Deadline.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
